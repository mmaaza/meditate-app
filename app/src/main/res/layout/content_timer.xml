<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Timer Display Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/timerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E6FFFFFF"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="40dp">

            <TextView
                android:id="@+id/tvMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05"
                android:textSize="72sp"
                android:textStyle="bold"
                android:textColor="#57C983" />

            <TextView
                android:id="@+id/tvSeconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="72sp"
                android:textStyle="bold"
                android:textColor="#57C983"
                android:layout_marginTop="-16dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready"
                android:textSize="14sp"
                android:textColor="#6F7975"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Duration Presets Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/presetsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#EBFFFFFF"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration presets"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1C1F1D" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:id="@+id/chipsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chip1min"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="1 min"
                        android:textSize="14sp"
                        android:textColor="#57C983"
                        android:background="@drawable/bg_chip_inactive"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/chip3min"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="3 min"
                        android:textSize="14sp"
                        android:textColor="#57C983"
                        android:background="@drawable/bg_chip_inactive"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/chip5min"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="5 min"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_chip_active"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/chip10min"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="10 min"
                        android:textSize="14sp"
                        android:textColor="#57C983"
                        android:background="@drawable/bg_chip_inactive"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/chip15min"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="15 min"
                        android:textSize="14sp"
                        android:textColor="#57C983"
                        android:background="@drawable/bg_chip_inactive"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/chipCustom"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Custom"
                        android:textSize="14sp"
                        android:textColor="#57C983"
                        android:background="@drawable/bg_button_outline"
                        android:gravity="center"
                        android:paddingHorizontal="20dp" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/btn_start"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_gradient_green_button"
            android:backgroundTint="@null"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/btn_reset"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_gradient_green_button"
            android:backgroundTint="@null"
            android:textAllCaps="false"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

