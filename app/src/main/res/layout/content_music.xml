<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#EBFFFFFF"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soundscapes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#57C983" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Curated breathing playlists are coming soon. Save your favorite ocean, forest, or starry sky ambience here."
                android:textSize="14sp"
                android:textColor="#5F6461"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="12dp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:alpha="0.3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coming Soon"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#9AA5A0"
                android:textAlignment="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>

